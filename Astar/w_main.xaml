<Window Name="_this" x:Class="Astar.w_main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Astar"
        mc:Ignorable="d"
        Title="w_main" Height="845" Width="1130" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" Foreground="{x:Null}">
    <Border Background="#FF012336" CornerRadius="15" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="#FF616161"/>
        </Border.Effect>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding ElementName=_this,Path=Height}"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Background="#FF011011" CornerRadius="15" Padding="10" Margin="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.8"/>
                </Border.Effect>
                <Grid x:Name="table">
                </Grid>
            </Border>
            <StackPanel x:Name="tool">

            </StackPanel>
        </Grid>
    </Border>
</Window>
